<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentComplaintActivity"
    android:orientation="vertical">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- App Bar with Enhanced Gradient and Features -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/drawer_header_gradient"
                    app:title="Smart Complaint System"
                    app:titleTextColor="#FFFFFF"
                    app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    app:popupTheme="@style/ThemeOverlay.Material3.Light"
                    app:navigationIcon="@drawable/outline_arrow_back_24"
                    app:navigationIconTint="#FFFFFF" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0F2F5">

                <LinearLayout
                    android:id="@+id/llContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Your Issue"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"/>

                    <!-- Card Container -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardComplaintForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        app:cardBackgroundColor="#E4E1E1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:id="@+id/llForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/white"
                            android:elevation="3dp">

                            <!-- Full Name -->
                            <TextView
                                android:id="@+id/tvFullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:textColor="#101010"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilFullName"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFullName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter full name"
                                    android:textColor="#141313"
                                    android:textColorHint="#0B0B0B" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Enrollment Number -->
                            <TextView
                                android:id="@+id/tvEnrollment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Enrollment Number"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilEnrollment"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etEnrollment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter enrollment number"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Mobile Number -->
                            <TextView
                                android:id="@+id/tvMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Mobile No"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilMobile"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter mobile number"
                                    android:inputType="phone" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Branch -->
                            <TextView
                                android:id="@+id/tvBranch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Select Branch"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/rgBranch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <RadioButton
                                    android:id="@+id/rbICT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ICT"
                                    android:textColor="#101010" />

                                <RadioButton
                                    android:id="@+id/rbCE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Computer Engineering"
                                    android:textColor="#140202" />

                                <RadioButton
                                    android:id="@+id/rbMech"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mechanical"
                                    android:textColor="#140101" />

                                <RadioButton
                                    android:id="@+id/rbOther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Other"
                                    android:textColor="#000000" />
                            </RadioGroup>

                            <!-- Other Branch Input -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilOtherBranch"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:visibility="gone">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOtherBranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter your branch" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Complaint Category -->
                            <TextView
                                android:id="@+id/tvCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Complaint Category (Optional)"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnerCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp" />

                            <!-- Priority -->
                            <TextView
                                android:id="@+id/tvPriority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Priority (Optional)"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/rgPriority"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <RadioButton
                                    android:id="@+id/rbLow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Low"
                                    android:textColor="#101010" />

                                <RadioButton
                                    android:id="@+id/rbMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Medium"
                                    android:textColor="#140202" />

                                <RadioButton
                                    android:id="@+id/rbHigh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="High"
                                    android:textColor="#140101" />
                            </RadioGroup>

                            <!-- Attach Image -->
                            <TextView
                                android:id="@+id/tvAttachImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Attach Image (Optional)"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAttachImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Choose Image"
                                android:layout_marginTop="8dp"
                                android:textColor="#EDE4E4"
                                app:cornerRadius="12dp" />

                            <!-- Describe Problem -->
                            <TextView
                                android:id="@+id/tvDescribeProblem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Describe Problem"
                                android:textColor="#444444"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilDescribeProblem"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etDescribeProblem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:hint="Describe your problem"
                                    android:minLines="4"
                                    android:textColor="#100101" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Submit Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSubmitComplaint"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="24dp"
                                android:backgroundTint="#1A237E"
                                android:text="SUBMIT COMPLAINT"
                                android:textColor="#EDE4E4"
                                android:background="@drawable/bg_header_gradient"
                                app:cornerRadius="12dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
